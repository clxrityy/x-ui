{
  "name": "@clxrity/x-ui",
  "private": false,
  "version": "1.0.0",
  "packageManager": "yarn@1.22.22",
  "repository": {
    "type": "git",
    "url": "https://github.com/clxrityy/x-ui.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "engines": {
    "node": "22"
  },
  "author": {
    "name": "MJ Anglin",
    "email": "contact@mjanglin.com",
    "url": "https://mjanglin.com",
    "github": "https://github.com/clxrityy"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "storybook build -o docs",
    "build:lib": "vite build",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,js,mdx}\"",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "deploy:docs": "gh-pages -d docs"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "homepage": "https://clxrityy.github.io/x-ui/",
  "bugs": {
    "url": "https://github.com/clxrityy/x-ui/issues"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier -w"
    ]
  },
  "license": "MIT",
  "keywords": [
    "react",
    "ui",
    "design",
    "system",
    "component",
    "library",
    "vite",
    "nextjs",
    "storybook"
  ],
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@storybook/addon-essentials": "8.3.6",
    "@storybook/addon-interactions": "8.3.6",
    "@storybook/addon-links": "8.3.6",
    "@storybook/addon-mdx-gfm": "^8.3.6",
    "@storybook/addon-onboarding": "^8.3.6",
    "@storybook/addon-styling": "1.3.7",
    "@storybook/blocks": "^8.3.6",
    "@storybook/manager-api": "^8.3.6",
    "@storybook/react": "8.3.6",
    "@storybook/react-vite": "8.3.6",
    "@storybook/testing-library": "0.2.2",
    "@storybook/theming": "^8.3.6",
    "@testing-library/react": "16.0.1",
    "@types/node": "22.8.4",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react": "4.3.3",
    "@vitest/coverage-v8": "2.1.4",
    "autoprefixer": "10.4.20",
    "babel-loader": "9.2.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "gh-pages": "^6.2.0",
    "husky": "9.1.6",
    "jsdom": "25.0.1",
    "json": "11.0.0",
    "lint-staged": "15.2.10",
    "lucide-react": "^0.454.0",
    "postcss": "8.4.47",
    "prettier": "3.3.3",
    "prop-types": "15.8.1",
    "react-icons": "^5.3.0",
    "storybook": "8.3.6",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.6.3",
    "vite": "5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "2.1.4",
    "zustand": "^5.0.0"
  }
